; ==========================  MODULE =========================
[module/pulseaudio-control]
;Custom script installed via AUR - https://github.com/marioortizmanero/polybar-pulseaudio-control for config reference
type = custom/script
tail = true
;format-underline = ${colors.color04}
label-padding = 2
label-foreground = ${colors.color02}

;Icons mixed from Font Awesome 6 5 and Material Icons
;Have never been able to get icons to display
exec = /usr/bin/pulseaudio-control --icons-volume "ÔÄß ,ÔÄ® " --icon-muted "ÔÄ¶ " --node-nicknames-from "alsa.card_name" --node-nickname "alsa_output.pci-0000_0d_00.4.analog-stereo: Speakers" --node-nickname "bluez_sink.28_9A_4B_81_23_25.a2dp_sink: Arctis 9X" --node-nickname "alsa_output.usb-Corsair_Components__Inc._Corsair_Gaming_H1500_Headset-00.analog-stereo: Corsair V1500" --node-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink: Speakers" --node-nickname "bluez_sink.EC_AA_25_DB_1B_5D.a2dp_sink: Galaxy Buds" listen
click-right = exec pavucontrol &
click-left = /usr/bin/pulseaudio-control togmute
click-middle = /usr/bin/pulseaudio-control  --node-blacklist "alsa_output.pci-0000_0b_00.1.hdmi-stereo" next-node
scroll-up = /usr/bin/pulseaudio-control  --volume-max 100 up
scroll-down = /usr/bin/pulseaudio-control --volume-max 100 down

; ==========================  MODULE =========================
[module/date]
type = internal/date
interval = 5

date =
date-alt = "%d/%m/%Y"

time = "   %a, %b %d  %H:%M "

time-alt = %H:%M

format-foreground = ${colors.color02}
;format-underline =

label = %date% %time%

